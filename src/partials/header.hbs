<link rel='stylesheet' href='../../../header.css' />
<script src='../../main.js'></script>
<header>
	<nav class='header_nav'>
		<ul class='header_list'>
			<li><img src='/assets/Logo.svg' alt='Logo' /></li>
			<li>
				<figure class='header_geo'>
					<img src="/assets/Location.svg" alt="">
						<figcaption id='city-name' class='header_city'>Пятигорск</figcaption>
				</figure>

				<template  id='confirm-template'>
					<dialog class="dialog1" id='confirm-dialog'>
						<div class='modal-content'>
							<h2 id='confirm-title' class="confirm-title">Ваш город Пятигорск?</h2>
							<button class="confirm_btn" id='confirm-yes'>Да, верно</button>
							<button class="confirm_btn" id='confirm-change'>Изменить регион</button>
						</div>
					</dialog>
				</template>

				<template id='city-template'>
					<dialog class="dialog2" id='city-dialog'>
						<div class='modal-content2'>
							<h2 class="title_city">Выберите город</h2>
							<ul class='city-list'>
								<button class="city_btn" data-city='Воронеж'>Воронеж</button>
								<button class="city_btn" data-city='Москва'>Москва</button>
								<button class="city_btn" data-city='Ростов-на-Дону'>Ростов-на-Дону</button>
								<button class="city_btn" data-city='Иркутск'>Иркутск</button>
								<button class="city_btn" data-city='Н. Новгород'>Н. Новгород</button>
								<button class="city_btn" data-city='Пятигорск'>Пятигорск</button>
								<button class="city_btn" data-city='Санкт-Петербург'>Санкт-Петербург</button>
								<button class="city_btn" data-city='Новороссийск'>Новороссийск</button>
								<button class="city_btn" data-city='Екатеринбург'>Екатеринбург</button>
								<button class="city_btn" data-city='Челябинск'>Челябинск</button>
								<button class="city_btn" data-city='Казань'>Казань</button>
							</ul>
						</div>
					</dialog>
				</template>
			</li>
		</ul>
	</nav>
</header>